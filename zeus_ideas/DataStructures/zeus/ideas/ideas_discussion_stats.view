{
  "viewName":"ZEUS_DISCUSSION_STATS",
  "query":"SELECT
	MAX(ZEUSC_LASTMODIFIED_TIME) AS LATEST_UPDATE_TIME,
	COUNT(ZEUSC_REPLY_TO_ZEUSC_ID) AS REPLIES,
	COUNT(DISTINCT ZEUSC_USER) AS PARTICIPANTS,
	ZEUSB_ID	
FROM ZEUS_COMMENT, ZEUS_BOARD
WHERE ZEUSC_ZEUSB_ID = ZEUSB_ID
GROUP BY ZEUSB_ID
ORDER BY LATEST_UPDATE_TIME, REPLIES, PARTICIPANTS DESC",
    "dependencies": [
        {"name": "ZEUS_COMMENT", "type": "TABLE"},
        {"name": "ZEUS_BOARD", "type": "TABLE"}
        ]
}
